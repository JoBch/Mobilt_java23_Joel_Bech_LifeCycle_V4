<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/menuHomeBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Home" />

    <Button
        android:id="@+id/menuCredentialsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Credentials" />

    <Button
        android:id="@+id/menuLoginBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login new user" />

    <Button
        android:id="@+id/menuLogoutBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout" />

    <Button
        android:id="@+id/menuWelcomeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome Page" />
</LinearLayout>
